{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "RAILPACK"
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "python bot.py",
        "sleepApplication": false,
        "useLegacyStacker": false,
        "multiRegionConfig": {
            "us-east2": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}